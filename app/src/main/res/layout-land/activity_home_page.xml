<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/button3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3x3"
        app:layout_constraintBottom_toBottomOf="@+id/button5x5"
        app:layout_constraintEnd_toEndOf="@+id/score3x3"
        app:layout_constraintTop_toTopOf="@+id/button5x5" />

    <Button
        android:id="@+id/button5x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5x5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/score5x5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Sliding Puzzle Hero"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/button3x3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:text="High Score: 0"
        app:layout_constraintBottom_toBottomOf="@+id/score5x5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/score5x5" />

    <TextView
        android:id="@+id/score5x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="40dp"
        android:text="High Score: 0"
        app:layout_constraintStart_toEndOf="@+id/score3x3"
        app:layout_constraintTop_toBottomOf="@+id/button5x5" />

</android.support.constraint.ConstraintLayout>