<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="7dp"
        android:text="3x3"
        app:layout_constraintBottom_toTopOf="@+id/score5x5"
        app:layout_constraintEnd_toStartOf="@+id/button5x5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button5x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="12dp"
        android:text="5x5"
        app:layout_constraintBottom_toTopOf="@+id/score5x5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3x3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="127dp"
        android:text="Sliding Puzzle Hero"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button3x3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score3x3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="121dp"
        android:layout_marginStart="91dp"
        app:layout_constraintBottom_toBottomOf="@+id/score5x5"
        app:layout_constraintEnd_toStartOf="@+id/score5x5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/score5x5" />

    <TextView
        android:id="@+id/score5x5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="171dp"
        android:layout_marginEnd="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/score3x3"
        app:layout_constraintTop_toBottomOf="@+id/button3x3" />

</android.support.constraint.ConstraintLayout>